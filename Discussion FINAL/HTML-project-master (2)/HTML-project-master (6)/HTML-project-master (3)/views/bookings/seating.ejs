<body>
    <main>
        <div class="screen-banner">
            <div class="screen-text">SCREEN</div>
        </div>
        <div class="seating-map" id="seatingMap"></div>
        <div class="seat-legend">
            <span><span class="legend-box unavailable"></span> Unavailable</span>
            <span><span class="legend-box selected"></span> Your Seat</span>
            <span><span class="legend-box premium"></span> Premium</span>
        </div>
        <div class="booking-summary" id="bookingSummary">
            <h2>Your Selected Seats</h2>
            <div id="selected-seats">No seat selected</div>
            <div id="total-price">Total: 0.00</div>
            <button id="proceedButton" class="proceed-button" disabled>Secure Checkout</button>
        </div>
        <div class="my-bookings-section" style="margin-top:2rem; text-align:center;">
            <a href="/mytickets" class="proceed-button" style="background:#007bff;">View My Bookings</a>
        </div>
    </main>
    <style>
    .screen-banner { text-align:center; margin: 2rem 0 1rem 0; }
    .screen-text { font-size:2rem; font-weight:bold; letter-spacing:2px; color:#fff; background:#222; padding:1rem 3rem; border-radius:20px; box-shadow:0 4px 20px #0006; display:inline-block; }
    .seating-map { display:flex; flex-direction:column; align-items:center; margin-bottom:2rem; }
    .seat-row { display:flex; justify-content:center; margin:0.2rem 0; }
    .seat { width:32px; height:32px; margin:0 4px; border-radius:6px; background:#444; border:2px solid #222; cursor:pointer; transition:0.2s; display:flex; align-items:center; justify-content:center; }
    .seat.unavailable { background:#222; cursor:not-allowed; color:#888; }
    .seat.selected { background:#c2185b; border-color:#c2185b; color:#fff; }
    .seat.premium { background:#7ed957; border-color:#7ed957; color:#fff; }
    .seat-legend { display:flex; gap:2rem; justify-content:center; margin-bottom:2rem; }
    .legend-box { display:inline-block; width:22px; height:22px; border-radius:5px; margin-right:0.5rem; vertical-align:middle; }
    .legend-box.unavailable { background:#222; border:2px solid #222; }
    .legend-box.selected { background:#c2185b; border:2px solid #c2185b; }
    .legend-box.premium { background:#7ed957; border:2px solid #7ed957; }
    .booking-summary { background:#181818; color:#fff; padding:2rem; border-radius:12px; box-shadow:0 4px 16px #0003; max-width:400px; margin:2rem auto; text-align:center; }
    .proceed-button { width:100%; padding:1rem; background:#c2185b; color:#fff; border:none; border-radius:8px; font-size:1.1rem; font-weight:600; cursor:pointer; margin-top:1rem; transition:0.2s; }
    .proceed-button:disabled { background:#555; cursor:not-allowed; }
    </style>
    
    <script src="/js/seating.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const showSummaryBtn = document.getElementById('showSummaryBtn');
        const bookingSummary = document.getElementById('bookingSummary');
        if (showSummaryBtn && bookingSummary) {
            showSummaryBtn.addEventListener('click', function() {
                bookingSummary.style.display = 'block';
                showSummaryBtn.style.display = 'none';
            });
        }
    });
    </script>
    </body>
</html>