<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <!-- Use correct public paths for CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin_dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/admin-dash.css">
</head>
<body>
    <div class="container dashboard">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Admin Dashboard</h2>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <a href="/admin/manage-users" class="text-decoration-none">
                    <div class="card text-center p-4">
                        <i class="fas fa-users fa-2x mb-2 text-primary"></i>
                        <h5>User Management</h5>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/admin/manage-movies" class="text-decoration-none">
                    <div class="card text-center p-4">
                        <i class="fas fa-film fa-2x mb-2 text-info"></i>
                        <h5>Movie Management</h5>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/admin/manage-admins" class="text-decoration-none">
                    <div class="card text-center p-4">
                        <i class="fas fa-user-shield fa-2x mb-2 text-success"></i>
                        <h5>Admin Management</h5>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const logoutBtn = document.querySelector('.logout-btn');
        if (logoutBtn) {
            logoutBtn.addEventListener('click', async function(e) {
                e.preventDefault();
                localStorage.removeItem('token');
                localStorage.removeItem('user');
                localStorage.removeItem('isLoggedIn');
                await fetch('/logout', { method: 'POST', credentials: 'include' });
                window.location.href = '/';
            });
        }
    });
    </script>
</body>
</html>
